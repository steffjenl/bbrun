{
  "name": "bbrun",
  "version": "0.10.1",
  "description": "Run your Bitbucket Pipelines locally",
  "type": "module",
  "main": "index.js",
  "preferGlobal": true,
  "bin": "./index.js",
  "scripts": {
    "prettier": "prettier --write *.js src/*.js test/*.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest test/*.js",
    "test-examples": "NODE_OPTIONS=--experimental-vm-modules jest examples/*.js",
    "test-all": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mserranom/bbrun.git"
  },
  "author": "mserranom@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mserranom/bbrun/issues"
  },
  "homepage": "https://github.com/mserranom/bbrun#readme",
  "dependencies": {
    "check-types": "11.0.x",
    "js-yaml": "3.13.x",
    "meow": "11.0.x",
    "shelljs": "0.8.x"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "prettier": "^1.19.1"
  }
}
